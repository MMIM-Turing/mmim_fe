<div class="card" style="width: 40rem;">
  <div class="card-body">
    <div class="mb-3">
      <dl class ="list-group">
        <%= form_with url: '/dashboard/meeting', local: true do |form|  %>
          <% @locations.each do |location| %>
            <dd class="list-group-item d-flex justify-content-between align-items-center text-truncate">
              <%= form.hidden_field :user_a_email, value: current_user.email %>
              <%= form.hidden_field :user_b_email, value: params[:user_b_email] %>
              <%= check_box_tag "place_ids[]", location.place_id %>
              <strong><%= location.name %></strong>
              <%= location.address %><br>
              <br>
              Average Rating: <%= location.rating %><br>
              <button style="height:20%" type="button" class="btn-success btn-sm"><%= location.price_rating %></button>
              <img src="<%= location.image_url %>" class="card-img-left" style="max-width:20%; height:auto" alt="location thumb">
            </dd>
            <% end %>
          <%= form.submit "Request a meeting", style: "center" %>
        <% end %>
      </dl>
    </div>
  </div>
</div>
