<%= form_with url: '/results', method: :post, local: true do |form| %>
  <%= form.label "Address 1:" %>
  <%= form.text_field :address_1, value: 'enter address or zipcode' %><br>
  <%= form.label "Address 2:" %>
  <%= form.text_field :address_2, value: 'enter address or zipcode' %><br>
  <%= form.label "Category:" %>
  <%= form.text_field :category, value: 'eg. coffee, bar, gym' %><br>
  <%= form.submit "Search" %>
<% end %>
