<%= form_with url: '/results', method: :patch, local: true do |form| %>
  <%= form.text_field :category, { class: "form-control-sm", placeholder: 'search new category' } %>
  <%=form.hidden_field :address_1, value: params[:address_1] %>
  <%=form.hidden_field :address_2, value: params[:address_2] %>
  <%= form.submit "Update Category", class: "btn btn-success" %>
<% end %>
